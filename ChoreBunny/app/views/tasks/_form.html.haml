= simple_form_for(@task, html: { class: 'form-horizonal'}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category" }, input_html: { class: "dropdown-toggle" }
  %br/
  %br/
  = f.input :title, label: 'Title', input_html: { class: "form-control" }
  = f.input :description, label: 'Description', input_html: { class: "form-control" }
  = f.input :company, label: 'Who Are You?', input_html: { class: "form-control" }
  = f.input :url, label: 'Task URL', input_html: { class: "form-control" }
  = f.button :submit
